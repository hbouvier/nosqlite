{
    "author"      : "Henri Bouvier",
    "name"        : "nosqlite",
    "description" : "A nosql light database",
    "version"     : "0.0.1",
    "repository"  : {
        "type" : "git",
        "url"  : "https://github.com/hbouvier/nosqlite.git"
    },
    "keywords": [
        "nosql",
        "database",
        "json"
    ],
    "main" : "./lib/nosqlite.js",
    "bin"  : {
        "nosqlited" : "./bin/nosqlited"
    },
    "dependencies"         : {
        "q"       : "latest",
        "express" : "latest",
        "connect" : "latest",
        "sqlite3" : "latest",
        "winston" : "latest",
        "node-uuid" : "latest",
        "node-options" : "latest"
    },
    "devDependencies": {
        "jasmine-node": "latest",
        "istanbul": "latest",
        "jscoverage" : "latest",
        "jscoverage-reporter" : "latest"
    },    
    "engines"              : {
        "node" : ">= 0.10.0 < 0.11.0"
    },
    "scripts": {
        "start": "bin/nosqlited",
        "test" : "jscoverage lib lib-cov ;istanbul cover jasmine-node -- spec",
        "verbose-test" : "jasmine-node --verbose spec",
        "autotest" : "jasmine-node --autotest spec --watch ."
    },
    "configuration"        : {
        "name"    : "nosqlited",
        "level"   : "debug",
        "context" : "/nosqlite/v1",
        "port"    : 3000
    }
}
